<div class="row">
  <%= render 'aside' %>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <% if @user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts.page params[:page] %>
      </ol>
      <%= paginate @microposts.page params[:page] %>
    <% end %>
  </div>
</div>