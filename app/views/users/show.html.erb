<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<div class="col-md-6 col-md-offset-3">
  <dl class="dl-horizontal">
    <dt>Name</dt>
    <dd><%= @user.name %></dd>
    <dt>Email</dt>
    <dd><%= @user.email %></dd>
    <dt>Profile</dt>
    <dd><%= @user.profile %></dd>
    <dt>Location</dt>
    <dd><%= @user.location %></dd>
  </dl>
  <%= link_to "Edit my account", edit_user_path, class: "btn btn-large btn-primary btn-block" %>
</div>