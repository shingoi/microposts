<h1>Update your account</h1>

<div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    
      <%= f.label :name %>
      <%= f.text_field :name %>
    
      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :profile %>
      <%= f.text_field :profile %>
    
      <%= f.label :location %>
      <%= f.text_field :location %>
      
      <%= f.submit "Update my account", class: "btn btn-large btn-primary" %>
    <% end %>
</div>